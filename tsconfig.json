{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "esnext",
    "target": "esnext",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "*": [
        "src/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "features/*": [
        "src/features/*"
      ],
      "hooks/*": [
        "src/hooks/*"
      ],
      "services/*": [
        "src/services/*"
      ],
      "store/*": [
        "src/store/*"
      ],
      "types": [
        "src/types/index.ts"
      ],
      "types/*": [
        "src/types/*"
      ],
      "utils/*": [
        "src/utils/*"
      ]
    }
  },
  "include": ["src", "src/__mocks__", "src/__tests__", "vite.config.ts", "vitest.config.ts"],
  "exclude": [
    "node_modules",
    "node_modules/obs-websocket-js",
    
    "dist",
    "build",
    "tmp",
    "*.log",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/__tests__/**",
    "src/**/__mocks__/**",
    "src/**/*.mock.ts",
    "src/**/*.mock.tsx"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}

{
  "compilerOptions": {
  "module": "esnext",
  "esModuleInterop": true,
  "allowJs": true,
  "checkJs": false,
  "outDir": "./dist-node",
  "rootDir": "./",
  "strict": false,
  "target": "ESNext",
  "moduleResolution": "node",
  "resolveJsonModule": true,
  "types": ["node"],
  "composite": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
  "exclude": ["node_modules", "dist", "build"]
}
